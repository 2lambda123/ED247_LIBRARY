    FILEPATH
    DIRECTION
    NUM_CHANNELS
    NUM_STREAMS
    NUM_SIGNALS
    STREAM_TYPE)

set(CONTENT "<?xml version=\"1.0\" encoding=\"UTF-8\"?>

